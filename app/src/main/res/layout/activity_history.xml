<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HistoryActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/backup">
            <ImageButton
                android:id="@+id/habitBackBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/back_icon"
                android:backgroundTint="@color/fontPrimary"
                android:clickable="true"
                android:focusable="true"
                android:scaleType="fitCenter"
                android:layout_centerVertical="true"/>
            <ImageButton
                android:id="@+id/leftBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/chevron_left_icon"
                android:backgroundTint="@color/fontPrimary"
                android:clickable="true"
                android:focusable="true"
                android:scaleType="fitCenter"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/dateTxt"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/dateTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/fontPrimary"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="28sp"/>
            <ImageButton
                android:id="@+id/rightBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/chevron_right_icon"
                android:backgroundTint="@color/fontPrimary"
                android:clickable="true"
                android:focusable="true"
                android:scaleType="fitCenter"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/dateTxt"
                android:layout_marginLeft="10dp"
                android:visibility="gone"/>
        </RelativeLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/noResultsTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Results Found"
                android:textSize="24sp"
                android:textColor="@color/error"
                android:textStyle="bold"
                android:layout_gravity="center"/>
            <ListView
                android:id="@+id/habit_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            </ListView>
        </FrameLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>